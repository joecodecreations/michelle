<div class="col-xs-12 col-sm-12 col-md-6 col-lg-4">

    <!-- PRICE ITEM -->
    <div class="panel price panel-grey">
      <% if (bestOffer) { %>
    <div class="modal__ribbon">
       <strong class="modal__ribbon-content">Best Offer!</strong>
    </div>
      <% } %>
      <div class="panel-heading arrow_box text-center">
      <h3 class="overthetop"><%= pricingTitle %></h3>
      </div>
      <div class="panel-body text-center">
        <p class="lead" style="font-size:40px"><strong>$ <%= pricingPrice %> USD</strong></p>
      </div>
      <ul class="list-group list-group-flush text-center">
        <li class="list-group-item"><i class="icon-ok text-success"></i> <%= pricingSummary1 %></li>
        <li class="list-group-item"><i class="icon-ok text-success"></i> <%= pricingSummary2 %></li>
        <li class="list-group-item"><i class="icon-ok text-success"></i> <%= pricingSummary3 %></li>
      </ul>
      <div class="panel-footer">
        <a class="btn btn-lg btn-block btn-success" href="#">BUY NOW!</a>
      </div>
    </div>
    <!-- /PRICE ITEM -->
</div>
